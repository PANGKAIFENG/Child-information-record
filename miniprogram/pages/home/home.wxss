.container {
  padding: 30rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 骨架屏样式 */
.skeleton {
  width: 100%;
  animation: pulse 1.5s infinite alternate;
}

.skeleton-header {
  height: 150rpx;
  background: #e9ecef;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.skeleton-stats {
  height: 200rpx;
  background: #e9ecef;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.skeleton-list {
  margin-top: 20rpx;
}

.skeleton-item {
  height: 120rpx;
  background: #e9ecef;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* 用户信息样式 */
.header {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.age {
  font-size: 26rpx;
  color: #666;
}

/* 快捷功能区 */
.quick-access {
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.access-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.access-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}

.access-button text {
  font-size: 26rpx;
  color: #333;
}

/* 今日概览 */
.overview {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 8rpx;
  height: 32rpx;
  background: #4caf50;
  border-radius: 4rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.overview-item {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

/* 最近记录 */
.recent-records {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-list {
  margin-top: 10rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.record-icon image {
  width: 40rpx;
  height: 40rpx;
}

.record-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 空提示和加载状态 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.loading-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
  }
  100% { 
    transform: rotate(360deg); 
  }
}