/* 底部导航栏样式 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
}

.tab-item.active {
  color: #ff6b81;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 3px;
}

.tab-text {
  font-size: 10px;
} 