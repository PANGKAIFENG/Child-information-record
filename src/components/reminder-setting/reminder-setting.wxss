.separator {
  width: 1rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  margin: 0 20rpx;
}

.reminder-switch {
  transform: scale(0.8);
  transform-origin: right center;
}

/* wx switch 组件自定义样式 */
.reminder-switch .wx-switch-input {
  background-color: #ddd !important;
  border-color: #ddd !important;
}

.reminder-switch .wx-switch-input.wx-switch-input-checked {
  background-color: #ff6b81 !important;
  border-color: #ff6b81 !important;
} 