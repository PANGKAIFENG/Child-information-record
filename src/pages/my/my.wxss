/* src/pages/my/my.wxss */
.container {
  min-height: 100vh;
  background-color: #f0f4fa;
  padding-bottom: 40rpx;
}

/* --- 状态一：未登录 --- */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.app-desc {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-bottom: 60rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #00c853;
  color: white;
}

.features-preview {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  margin-top: 30rpx;
}

.feature-item {
  background-color: #f5f5f5;
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 28rpx;
  color: #666;
}

/* --- 状态二：设置信息 --- */
.setup-container {
  padding: 40rpx 30rpx;
}

.setup-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx 0;
  background-color: transparent;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.picker-value {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.save-btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* --- 状态三：已设置信息 --- */
.profile-container {
  padding: 30rpx 30rpx 40rpx;
}

.profile-header {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar-display {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info-text {
  flex: 1;
}

.baby-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.baby-birthdate, .baby-age {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 新增：编辑图标样式 */
.edit-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 新样式: 功能卡片 */
.function-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon-wrapper {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
}

.function-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow-icon {
  color: #ccc;
  font-size: 32rpx;
}

/* 退出登录卡片 */
.logout-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 0;
  margin-top: 50rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logout-text {
  color: #f56c6c;
  font-size: 32rpx;
}

/* 移除旧样式 */
.action-list {
  padding: 30rpx 0;
}

.action-item {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  color: #333;
}

.logout-btn {
  background: #fff;
  color: #ff6b81;
  margin-top: 30rpx;
}

.logout-btn-bottom {
  width: 80%;
  margin: 40rpx auto;
  color: #ff6b81;
  background: #fff;
  border: 1rpx solid #eee;
}