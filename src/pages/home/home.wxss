/* 首页样式 */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 10px;
}

/* 骨架屏样式 */
.skeleton {
  padding: 15px;
  box-sizing: border-box;
}

.skeleton-line {
  background-color: #f0f0f0; /* 骨架屏基础灰色 */
  border-radius: 4px;
  height: 16px; /* 默认行高 */
  width: 100%; /* 默认宽度 */
  animation: skeleton-blink 1.2s ease-in-out infinite; /* 添加动画 */
}

.skeleton-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.skeleton-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 15px;
  animation: skeleton-blink 1.2s ease-in-out infinite;
}

.skeleton-user-text {
  flex: 1;
}

.skeleton-user-text .skeleton-line:last-child {
  margin-top: 8px;
}

.skeleton-quick-access {
  display: flex;
  justify-content: space-around;
  margin-bottom: 25px;
}

.skeleton-access-button {
  width: 50px;
  height: 70px; /* 大致模拟图标+文字 */
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 模拟按钮内部结构 */
.skeleton-access-button::before {
  content: '';
  display: block;
  width: 40px;
  height: 40px;
  background-color: #f0f0f0;
  border-radius: 8px;
  margin-bottom: 8px;
  animation: skeleton-blink 1.2s ease-in-out infinite;
}
.skeleton-access-button::after {
  content: '';
  display: block;
  width: 30px;
  height: 12px;
  background-color: #f0f0f0;
   border-radius: 4px;
   animation: skeleton-blink 1.2s ease-in-out infinite;
}


.skeleton-overview,
.skeleton-recent {
  margin-bottom: 25px;
}

.skeleton-title-line {
  height: 18px;
  width: 100px;
  background-color: #f0f0f0;
  border-radius: 4px;
  margin-bottom: 15px;
  animation: skeleton-blink 1.2s ease-in-out infinite;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
}

.skeleton-grid-item {
  /* 样式已通过内部的 skeleton-line 定义 */
}

.skeleton-grid-item .skeleton-line:last-child {
  margin-top: 8px;
}


.skeleton-record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5; /* 添加分隔线模拟列表项 */
}

.skeleton-record-item:last-child {
  border-bottom: none;
}


/* 简单的闪烁动画 */
@keyframes skeleton-blink {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}

/* -------- 骨架屏样式结束 -------- */

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
  padding: 20px 20px 0;
  background-color: white;
  padding-bottom: 20px;
  border-radius: 10px;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-right: 15px;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333333;
}

.age {
  font-size: 15px;
  color: #666666;
}

.quick-access {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
  padding: 0 20px;
}

.access-button {
  background-color: white;
  border-radius: 8px;
  padding: 15px;
  text-align: center;
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  color: #333333;
  font-size: 14px;
}

.access-icon {
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}

.overview {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
  color: #333333;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 15px;
}

.overview-item {
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 5px;
}

.item-value {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
}

.recent-records {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eeeeee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 30px;
  height: 30px;
}

.record-icon image {
  width: 100%;
  height: 100%;
}

.record-content {
  flex: 1;
  padding: 0 10px;
  color: #333333;
  font-size: 15px;
}

.record-time {
  color: #666666;
  font-size: 14px;
}

/* 加载指示器样式 */
.loading-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
  }
  100% { 
    transform: rotate(360deg); 
  }
}

.loading-records text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999999;
  font-size: 14px;
  padding: 15px 0;
} 