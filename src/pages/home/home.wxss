/* 首页样式 */
.container {
  background-color: var(--background-page);
  min-height: 100vh;
  padding: 0;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
  padding: 20px 20px 0;
  background-color: var(--background-card);
  padding-bottom: 20px;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-right: 15px;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  color: var(--text-primary);
}

.age {
  font-size: 15px;
  color: var(--text-secondary);
}

.quick-access {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
  padding: 0 20px;
}

.access-button {
  background-color: var(--background-card);
  border-radius: 8px;
  padding: 15px;
  text-align: center;
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  color: var(--text-primary);
  font-size: 14px;
}

.access-icon {
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}

.overview {
  background-color: var(--background-card);
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
  color: var(--text-primary);
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 15px;
}

.overview-item {
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 5px;
}

.item-value {
  font-size: 18px;
  font-weight: bold;
  color: var(--text-primary);
}

.recent-records {
  background-color: var(--background-card);
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid var(--border-color);
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 30px;
  height: 30px;
}

.record-icon image {
  width: 100%;
  height: 100%;
}

.record-content {
  flex: 1;
  padding: 0 10px;
  color: var(--text-primary);
  font-size: 15px;
}

.record-time {
  color: var(--text-secondary);
  font-size: 14px;
} 