/* 首页样式 */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 10px;
}

/* 骨架屏样式 */
.skeleton {
  width: 100%;
  animation: pulse 1.5s infinite alternate;
  padding: 10px;
}

.skeleton-header {
  height: 150rpx;
  background: #e9ecef;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.skeleton-stats {
  height: 200rpx;
  background: #e9ecef;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.skeleton-list {
  margin-top: 20rpx;
}

.skeleton-item {
  height: 120rpx;
  background: #e9ecef;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
  padding: 20px 20px 0;
  background-color: white;
  padding-bottom: 20px;
  border-radius: 10px;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-right: 15px;
}

.user-text {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333333;
}

.age {
  font-size: 15px;
  color: #666666;
}

.quick-access {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
  padding: 0 20px;
}

.access-button {
  background-color: white;
  border-radius: 8px;
  padding: 15px;
  text-align: center;
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  color: #333333;
  font-size: 14px;
}

.access-icon {
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}

.overview {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
  color: #333333;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 15px;
}

.overview-item {
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 5px;
}

.item-value {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
}

.recent-records {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin: 0 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eeeeee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 30px;
  height: 30px;
}

.record-icon image {
  width: 100%;
  height: 100%;
}

.record-content {
  flex: 1;
  padding: 0 10px;
  color: #333333;
  font-size: 15px;
}

.record-time {
  color: #666666;
  font-size: 14px;
}

/* 加载指示器样式 */
.loading-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { 
    transform: rotate(0deg); 
  }
  100% { 
    transform: rotate(360deg); 
  }
}

.loading-records text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999999;
  font-size: 14px;
  padding: 15px 0;
} 