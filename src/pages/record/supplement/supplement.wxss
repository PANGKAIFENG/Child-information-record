/* 补给品记录页面样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--background-page);
}

/* 头部导航样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: var(--background-card);
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
}

.page-title {
  font-size: 34rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.nav-btn {
  font-size: 30rpx;
  padding: 10rpx 0;
  min-width: 80rpx;
  text-align: center;
  color: var(--primary-color);
  background: none !important; /* 确保无背景 */
  border: none !important; /* 确保无边框 */
  line-height: normal;
}

.cancel-btn {
  color: var(--cancel-color) !important;
}

.save-btn.disabled {
  color: var(--text-placeholder) !important;
  opacity: 1;
}

/* 表单样式 */
.form-container {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-item {
  background-color: var(--background-card);
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

.form-picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  padding: 0 20rpx;
  background-color: var(--background-input);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid var(--text-secondary);
  border-bottom: 3rpx solid var(--text-secondary);
  transform: rotate(45deg);
}

.form-input {
  height: 80rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  background-color: var(--background-input);
  border-radius: 8rpx;
  color: var(--text-primary);
}

/* 数量控制样式 */
.amount-control {
  display: flex;
  align-items: center;
}

.amount-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 36rpx;
  background-color: var(--background-page); /* 使用页面背景灰 */
  border-radius: 8rpx;
  color: var(--text-secondary);
}

.decrease {
  font-weight: bold;
}

.increase {
  font-weight: bold;
}

.amount-input {
  width: 120rpx;
  height: 80rpx;
  margin: 0 20rpx;
  text-align: center;
  background-color: var(--background-input);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: var(--text-primary);
}

.unit-picker {
  margin-left: 20rpx;
  background-color: var(--background-page); /* 使用页面背景灰 */
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
}

.unit-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 日期时间样式 */
.datetime-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker, .time-picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  padding: 0 20rpx;
  background-color: var(--background-input);
  border-radius: 8rpx;
}

.time-picker {
  margin-left: 20rpx;
}

.now-btn {
  margin-left: 20rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: var(--primary-color);
  border-radius: 8rpx;
  text-align: center;
}

/* 备注区域样式 */
.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  padding: 20rpx;
  background-color: var(--background-input);
  border-radius: 8rpx;
  box-sizing: border-box;
  color: var(--text-primary);
}

/* 底部按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  padding: 30rpx; /* 统一单位 */
  background-color: var(--background-card);
  border-top: 1px solid var(--border-color);
}

.btn-cancel, .btn-save {
  width: 48%;
  height: 88rpx; /* 统一高度 */
  line-height: 88rpx;
  border-radius: 8rpx; /* 统一圆角 */
  text-align: center;
  font-size: 32rpx; /* 统一字号 */
  border: none;
  transition: all 0.2s ease;
}

.btn-cancel {
  background-color: var(--cancel-bg-color);
  color: var(--text-secondary);
}

.btn-save {
  background-color: var(--save-color);
  color: #fff;
}

.btn-save[disabled] {
  opacity: 0.7;
  color: #fff;
  /* 可以考虑加个 filter: grayscale(80%); */
} 